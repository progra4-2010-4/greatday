            </div>
	   <%else%>
		 <%=link_to "Take new photo", new_photo_path%>
                <%=link_to "See all photos", photos_path%>
		<%=current_user.name%>
            <%= link_to "Logout","/logout" %>
	   <%end%>
           


 </header>
	<p class="notice"><%=flash[:notice]%></p>
